@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_ErrorLayout.cshtml";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
    @{          
        if (Request.IsLocal){
            if (Model != null && Model.Exception != null)
            {
                <h3 class="error">Exception was: @Model.Exception.Message (@Model.Exception.GetType().FullName)</h3>
                <h4 class="error">Stack Trace: @Model.Exception.StackTrace</h4>
            }else{
                <h3 class="error">Exception was null.</h3>

            }
        }else{
            <h3 class="error">The error was reported to the support team.</h3>
        }
    }
</hgroup>